{
  "compilerOptions": {
      "target": "es2021",
      "module": "commonjs",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "preserveConstEnums": true,
      "suppressImplicitAnyIndexErrors": true,
      "outDir": "./lib/",
      "sourceMap": true
  },
  "exclude": [
      "node_modules",
      "lib"
  ]
}